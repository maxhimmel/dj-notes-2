{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@dj-notes-2/shared": ["libs/shared/src/index.ts"],
      "@trpc/client": ["libs/trpc/client/src/index.ts"],
      "@trpc/server": ["libs/trpc/server/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
