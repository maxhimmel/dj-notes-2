generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type UsersSetLists {
  id        String                @map("_id") @db.ObjectId
  createdAt DateTime              @db.Date
  edges     UsersSetListsEdges[]
  name      String
  tracks    UsersSetListsTracks[]
  updatedAt DateTime              @db.Date
}

type UsersSetListsEdges {
  id     String @map("_id") @db.ObjectId
  edgeId String
  source String
  target String
}

type UsersSetListsTracks {
  id           String                           @map("_id") @db.ObjectId
  artist       String
  nodeId       String
  position     UsersSetListsTracksPosition
  spotifyTrack UsersSetListsTracksSpotifyTrack?
  title        String
}

type UsersSetListsTracksPosition {
  id String @map("_id") @db.ObjectId
  x  Float
  y  Float
}

type UsersSetListsTracksSpotifyTrack {
  id        String @map("_id") @db.ObjectId
  albumImg  String
  spotifyId String
}

model Users {
  id       String          @id @default(auto()) @map("_id") @db.ObjectId
  v        Int             @map("__v")
  email    String          @unique(map: "email_1")
  password String
  setLists UsersSetLists[]
  username String          @unique(map: "username_1")
}
